        JLabel title = new JLabel("Contact Information", SwingConstants.CENTER);
        title.setFont(new Font("Arial", Font.BOLD, 20));
        title.setBorder(BorderFactory.createEmptyBorder(20, 0, 10, 0));

        JTextArea info = new JTextArea();
        info.setEditable(false);
        info.setFont(new Font("Arial", Font.PLAIN, 16));
        info.setText(
                "üìç Address: 123 CarQuest Street, Dhaka, Bangladesh\n" +
                        "üìû Phone: +880-1234-567890\n" +
                        "üìß Email: support@CarQuest.com\n\n" +
                        "Thank you for choosing CarQuest!"
        );

        add(title, BorderLayout.NORTH);
        add(new JScrollPane(info), BorderLayout.CENTER);
        setVisible(true);
    }
}
