package gui;

import javax.swing.*;
import java.awt.*;

public class ContactUsFrame extends JFrame {
    public ContactUsFrame() {
        setTitle("Contact Us");
        setSize(400, 300);
        setLocationRelativeTo(null);
        setDefaultCloseOperation(DISPOSE_ON_CLOSE);
